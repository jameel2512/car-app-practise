<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_marginTop="10sp"
        app:cardCornerRadius="20sp"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"

            >

            <RelativeLayout
                android:id="@+id/id_allrides_Relative1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:padding="10sp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/id_allride_items_image"
                    android:layout_width="70sp"
                    android:layout_height="70sp"

                    >

                </de.hdodenhof.circleimageview.CircleImageView>


                <TextView
                    android:id="@+id/id_allride_items_field_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="10sp"
                    android:text="field 2"



                    />


            </RelativeLayout>


        <RelativeLayout
            android:id="@+id/id_allrides_Relative2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="field 3"
                android:id="@+id/id_allride_items_field_3"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10sp"



                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="field 4"
                android:id="@+id/id_allride_items_field_4"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5sp"


                />


        </RelativeLayout>





        <RelativeLayout
            android:id="@+id/id_allrides_Relative3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:padding="10sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="field 5"
                android:id="@+id/id_allride_items_field_5"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="field 6"
                android:id="@+id/id_allride_items_field_6"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5sp"


                />


        </RelativeLayout>

        </RelativeLayout>



    </android.support.v7.widget.CardView>




</RelativeLayout>