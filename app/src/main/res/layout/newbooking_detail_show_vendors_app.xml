<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jameel.everica.VendorApp.NewBooking_Details_Show_VendorsApp">




    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="New Booking detail"
            />

    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        app:cardCornerRadius="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10sp"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_mybookingdetail_customer_name_no_tv"
                    android:text="Customer Name And No"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blackcolor"
                    />


                <TextView
                    android:id="@+id/id_mybookingdetail_customer_name_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:hint="customer name no"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:padding="5sp"
                    android:textColor="@color/colorAccent"
                    android:layout_centerInParent="true"

                    />



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_mybookingdetail_carmodal_name_no_tv"
                android:text="Car Modal"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:padding="5sp"
                android:layout_centerInParent="true"
                android:textColor="@color/blackcolor"
                />


            <TextView
                android:id="@+id/id_mybookingdetail_carmodal_name_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:hint="Car modal name no"
                android:gravity="center"
                android:padding="5sp"
                android:textColor="@color/purplecolor"
                android:layout_centerInParent="true"
                android:textSize="12sp"

                />

            </RelativeLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_mybookingdetail_pickuploacation_tv"
                    android:text="Pickup Location"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blackcolor"
                    />


                <TextView
                    android:id="@+id/id_mybookingdetail_pickuploacation"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:hint="Pickup location"
                    android:padding="5sp"
                    android:textColor="@color/purplecolor"
                    android:layout_centerInParent="true"
                    android:gravity="right"
                    android:textSize="12sp"

                    />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_mybookingdetail_bookingDatetime_tv"
                    android:text="Booking Date"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blackcolor"
                    />


                <TextView
                    android:id="@+id/id_mybookingdetail_bookingDatetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:hint="booking Date"
                    android:padding="5sp"
                    android:textColor="@color/purplecolor"
                    android:layout_centerInParent="true"
                    android:gravity="right"
                    android:textSize="12sp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_mybookingdetail_startingDatetime_tv"
                    android:text="Starting Date"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blackcolor"
                    />


                <TextView
                    android:id="@+id/id_mybookingdetail_startingDatetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:hint="Starting Date"
                    android:padding="5sp"
                    android:textColor="@color/purplecolor"
                    android:layout_centerInParent="true"
                    android:gravity="right"
                    android:textSize="12sp"
                    />

            </RelativeLayout>





                     <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_mybookingdetail_endingDatetime_tv"
                    android:text="Ending Date"
                    android:textSize="12sp"
