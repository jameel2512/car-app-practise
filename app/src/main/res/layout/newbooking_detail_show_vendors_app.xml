                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:hint="Hours"
                    android:padding="5sp"
                    android:textColor="@color/purplecolor"
                    android:layout_centerInParent="true"
                    android:gravity="right"
                    android:textSize="12sp"

                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_mybookingdetail_paymentmethod_tv"
                    android:text="Payment Method"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blackcolor"
                    />


                <TextView
                    android:id="@+id/id_mybookingdetail_paymentmethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:hint="Payment Method"
                    android:padding="5sp"
                    android:textColor="@color/purplecolor"
                    android:layout_centerInParent="true"
                    android:gravity="right"
                    android:textSize="12sp"

                    />



            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_mybookingdetail_driverchoose_tv"
                    android:text="Driver"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blackcolor"
                    />


                <TextView
                    android:id="@+id/id_mybookingdetail_driverchoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:hint="Driver"
                    android:padding="5sp"
                    android:textColor="@color/purplecolor"
                    android:layout_centerInParent="true"
                    android:gravity="right"
                    android:textSize="12sp"

                    />



            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_mybookingdetail_fuelchoose_tv"
                    android:text="Fuel"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blackcolor"
                    />


                <TextView
                    android:id="@+id/id_mybookingdetail_fuelchoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:hint="fuel"
                    android:padding="5sp"
                    android:textColor="@color/purplecolor"
                    android:layout_centerInParent="true"
                    android:gravity="right"
                    android:textSize="12sp"

                    />



            </RelativeLayout>






            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_mybookingdetail_totalfare_tv"
                    android:text="Total Fare"
                    android:textSize="12sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:padding="5sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/blackcolor"
                    />


                <TextView
                    android:id="@+id/id_mybookingdetail_totalfare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:hint="total Fare"
                    android:gravity="center"
                    android:padding="5sp"
                    android:textColor="@color/purplecolor"
                    android:layout_centerInParent="true"
                    android:textSize="12sp"
                    />



            </RelativeLayout>






        </LinearLayout>


    </android.support.v7.widget.CardView>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_mybookingdetail_confirmbooking_btn"
            android:text="Booking To Start"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            />

    </LinearLayout>


    </ScrollView>



</RelativeLayout>
