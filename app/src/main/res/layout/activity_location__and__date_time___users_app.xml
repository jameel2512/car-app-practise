<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20sp"
    tools:context="com.example.jameel.everica.UsersApp.Location_And_DateTime_Activity_UsersApp">




    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Location , Date And Time"
            />

    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        app:cardCornerRadius="20sp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="20sp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"

            >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/id_ldt_start_location"
                android:hint="Pickup Location"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:gravity="center"
                android:padding="5sp"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/id_ldt_end_location"
                android:hint="Destination Location"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_below="@id/id_ldt_start_location"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:padding="5sp"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/id_ldt_hoursforRentCar"
                android:hint="Hours"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="20sp"
                android:layout_below="@id/id_ldt_end_location"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:padding="5sp"
                android:inputType="number"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/id_ldt_startDate_tv"
                android:hint="Start Date"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="80sp"
                android:layout_marginLeft="20sp"
                android:layout_below="@id/id_ldt_hoursforRentCar"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:padding="5sp"
                />


            <Button
                android:id="@+id/id_ldt_startDate_btn"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginTop="20sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:layout_below="@+id/id_ldt_hoursforRentCar"
               android:background="@drawable/date_icon"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/id_ldt_endDate_tv"
                android:hint="End Date"
                android:textSize="12sp"
                android:layout_below="@+id/id_ldt_startDate_tv"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="80sp"
                android:layout_marginLeft="20sp"
                android:gravity="center"
                android:layout_marginTop="20sp"
                >


            </TextView>

            <Button
                android:id="@+id/id_ldt_endDate_btn"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginTop="20sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:layout_below="@+id/id_ldt_startDate_btn"
                android:background="@drawable/date_icon"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/id_ldt_startTime_tv"
                android:hint="Start Time"
                android:textSize="12sp"
                android:layout_below="@+id/id_ldt_endDate_tv"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="80sp"
                android:layout_marginLeft="20sp"
                android:gravity="center"
                android:layout_marginTop="20sp"
                >


            </TextView>

            <Button
                android:id="@+id/id_ldt_startTime_btn"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginTop="20sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:layout_below="@+id/id_ldt_endDate_btn"
                android:background="@drawable/time_icon"

                />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:id="@+id/id_ldt_endTime_tv"
                android:hint="End Time"
                android:textSize="12sp"
                android:layout_below="@+id/id_ldt_startTime_tv"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="80sp"
                android:layout_marginLeft="20sp"
                android:gravity="center"
                android:layout_marginTop="20sp"
                >


            </TextView>

            <Button
                android:id="@+id/id_ldt_endTime_btn"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginTop="20sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:layout_below="@+id/id_ldt_startTime_tv"
                android:background="@drawable/time_icon"

                />





            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_ldt_dateTime_location_Save_btn"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="60sp"
            android:layout_marginLeft="60sp"
                android:text="Next"
                android:textSize="12sp"
                android:layout_below="@+id/id_ldt_endTime_tv"
                android:layout_marginTop="40sp"
                android:layout_marginBottom="40sp"
            />













