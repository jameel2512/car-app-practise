<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jameel.everica.VendorApp.DashBoard_VendorApp">



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_currentride_btn"
        android:text="Current Ride"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80sp"
        android:layout_marginLeft="80sp"

        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_allrideHistory_btn"
        android:text="Rides History"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80sp"
        android:layout_marginLeft="80sp"
        android:layout_below="@+id/id_currentride_btn"
        android:layout_marginTop="30sp"

        />


</RelativeLayout>
